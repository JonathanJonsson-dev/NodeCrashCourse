<!DOCTYPE html>
<html lang="en">
    <%- include('./layouts/head.ejs') %> 
<body>

    <%- include('./layouts/nav.ejs') %> 

    <div class="blogs content">
        <h2>All blogs</h2>

        <% if(blogs.length > 0){ %>
            <% blogs.forEach(blog =>{ %>
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
            <% }) %> 
        <% } else { %>
            <p>There are no blogs to display</p>
        <% } %> 


    </div>
    <%- include('./layouts/footer.ejs') %> 
</body>
</html>